<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/btn_icon"
        app:layout_constraintStart_toEndOf="@+id/btn_icon"
        app:layout_constraintTop_toTopOf="@+id/btn_icon"
        android:layout_marginStart="8dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tv_item_title"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:text="Nama Item"
            app:strokeWidth="0dp"
            android:backgroundTint="@color/gray_two"
            app:layout_constraintStart_toEndOf="@+id/btn_icon"
            app:layout_constraintTop_toTopOf="@+id/btn_icon" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tv_item_value"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:text="Value"
            android:backgroundTint="@color/gray_two"
            app:strokeWidth="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_icon"
            app:layout_constraintStart_toStartOf="@+id/tv_item_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_title" />
    </LinearLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_icon"
        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
        android:layout_width="48dp"
        android:backgroundTint="@color/gray_two"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>